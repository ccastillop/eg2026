<% if current_page.first? %>
  <span class="relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-400 bg-white border border-gray-300 cursor-not-allowed rounded-md">
    <%= t('views.pagination.first').html_safe %>
  </span>
<% else %>
  <%= link_to_unless current_page.first?, t('views.pagination.first').html_safe, url, remote: remote, class: "relative inline-flex items-center px-4 py-2 text-sm font-medium text-gray-700 bg-white border border-gray-300 hover:bg-gray-50 rounded-md transition-colors" %>
<% end %>
