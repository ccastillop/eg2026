<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <%= link_to candidates_path, class: "inline-flex items-center text-sm text-blue-600 hover:text-blue-800 mb-4" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
        </svg>
        Volver a candidatos
      <% end %>
    </div>
  </div>

  <!-- Main Content -->
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden">
      <!-- Header Section with Photo -->
      <div class="bg-gradient-to-r from-blue-600 to-blue-800 px-8 py-12">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-6">
          <!-- Photo -->
          <div class="flex-shrink-0">
            <div class="w-48 h-48 rounded-lg overflow-hidden bg-white shadow-lg">
              <% if @candidate.photo_guid.present? %>
                <%= image_tag @candidate.photo_url,
                    alt: @candidate.full_name,
                    class: "w-full h-full object-cover",
                    onerror: "this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 24 24%22 fill=%22%23d1d5db%22%3E%3Cpath d=%22M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z%22/%3E%3C/svg%3E';" %>
              <% else %>
                <div class="w-full h-full flex items-center justify-center bg-gray-100">
                  <svg class="h-32 w-32 text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Name and Primary Info -->
          <div class="flex-1 text-center md:text-left">
            <h1 class="text-3xl font-bold text-white mb-2">
              <%= @candidate.full_name %>
            </h1>
            <p class="text-xl text-blue-100 mb-4">
              <%= @candidate.position_type %>
            </p>

            <!-- Status Badge -->
            <div class="mb-4">
              <% if @candidate.status == "INSCRITO" || @candidate.status == "ADMITIDO" %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <%= @candidate.status %>
                </span>
              <% else %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-red-100 text-red-800">
                  <%= @candidate.status %>
                </span>
              <% end %>
            </div>

            <% if @candidate.position_number.present? %>
              <p class="text-blue-100">
                <span class="font-semibold">Posición en lista:</span> #<%= @candidate.position_number %>
              </p>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Details Section -->
      <div class="p-8">
        <!-- Political Organization -->
        <div class="mb-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
            </svg>
            Organización Política
          </h2>
          <div class="bg-gray-50 rounded-lg p-6 border border-gray-200">
            <p class="text-2xl font-bold text-gray-900 mb-2">
              <%= @candidate.political_organization.name %>
            </p>
            <% if @candidate.political_organization.acronym.present? %>
              <p class="text-lg text-gray-600 mb-4">
                <%= @candidate.political_organization.acronym %>
              </p>
            <% end %>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 text-sm">
              <div>
                <span class="font-medium text-gray-700">Tipo:</span>
                <span class="text-gray-600"><%= @candidate.political_organization.organization_type %></span>
              </div>
              <div>
                <span class="font-medium text-gray-700">Estado:</span>
                <span class="text-gray-600"><%= @candidate.political_organization.status %></span>
              </div>
            </div>
          </div>
        </div>

        <!-- Personal Information -->
        <div class="mb-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
            </svg>
            Información Personal
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <p class="text-sm font-medium text-gray-500 mb-1">Documento de Identidad</p>
              <p class="text-lg font-semibold text-gray-900">
                <%= @candidate.document_type %> <%= @candidate.document_number %>
              </p>
            </div>

            <% if @candidate.gender.present? %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm font-medium text-gray-500 mb-1">Género</p>
                <p class="text-lg font-semibold text-gray-900"><%= @candidate.gender %></p>
              </div>
            <% end %>

            <% if @candidate.birth_date.present? %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm font-medium text-gray-500 mb-1">Fecha de Nacimiento</p>
                <p class="text-lg font-semibold text-gray-900">
                  <%= @candidate.birth_date.strftime("%d/%m/%Y") rescue @candidate.birth_date %>
                </p>
              </div>
            <% end %>

            <% if @candidate.is_native.present? %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm font-medium text-gray-500 mb-1">Nativo</p>
                <p class="text-lg font-semibold text-gray-900">
                  <%= @candidate.is_native ? "Sí" : "No" %>
                </p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Electoral Information -->
        <div class="mb-8">
          <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
            <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"/>
            </svg>
            Información Electoral
          </h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <% if @candidate.electoral_district.present? %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm font-medium text-gray-500 mb-1">Distrito Electoral</p>
                <p class="text-lg font-semibold text-gray-900"><%= @candidate.electoral_district.name %></p>
                <% if @candidate.electoral_district.seats_count.present? %>
                  <p class="text-sm text-gray-600 mt-1">
                    <%= @candidate.electoral_district.seats_count %> escaños
                  </p>
                <% end %>
              </div>
            <% end %>

            <% if @candidate.department.present? %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm font-medium text-gray-500 mb-1">Departamento</p>
                <p class="text-lg font-semibold text-gray-900"><%= @candidate.department %></p>
              </div>
            <% end %>

            <% if @candidate.province.present? %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm font-medium text-gray-500 mb-1">Provincia</p>
                <p class="text-lg font-semibold text-gray-900"><%= @candidate.province %></p>
              </div>
            <% end %>

            <% if @candidate.district.present? %>
              <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
                <p class="text-sm font-medium text-gray-500 mb-1">Distrito</p>
                <p class="text-lg font-semibold text-gray-900"><%= @candidate.district %></p>
              </div>
            <% end %>
          </div>
        </div>

        <!-- Additional Information -->
        <% if @candidate.electoral_file_code.present? %>
          <div class="mb-8">
            <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
              <svg class="w-6 h-6 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
              </svg>
              Información Adicional
            </h2>
            <div class="bg-gray-50 rounded-lg p-4 border border-gray-200">
              <p class="text-sm font-medium text-gray-500 mb-1">Código de Expediente Electoral</p>
              <p class="text-lg font-semibold text-gray-900"><%= @candidate.electoral_file_code %></p>
            </div>
          </div>
        <% end %>

        <!-- Action Buttons -->
        <div class="flex flex-col sm:flex-row gap-4 pt-6 border-t border-gray-200">
          <%= link_to candidates_path, class: "inline-flex justify-center items-center px-6 py-3 border border-gray-300 shadow-sm text-base font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"/>
            </svg>
            Volver a la lista
          <% end %>

          <a href="#" onclick="window.print(); return false;" class="inline-flex justify-center items-center px-6 py-3 border border-transparent shadow-sm text-base font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z"/>
            </svg>
            Imprimir
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
