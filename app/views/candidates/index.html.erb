<div class="min-h-screen bg-gray-50">
  <!-- Header -->
  <div class="bg-white border-b border-gray-200">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
      <h1 class="text-3xl font-bold text-gray-900">Candidatos - Elecciones Generales 2026</h1>
      <p class="mt-2 text-sm text-gray-600">
        Mostrando <%= @candidates.total_count %> candidatos
      </p>
    </div>
  </div>

  <!-- Search and Filters -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-6">
    <%= form_with url: candidates_path, method: :get, class: "bg-white p-6 rounded-lg shadow-sm border border-gray-200" do |f| %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-5 gap-4">
        <!-- Search -->
        <div>
          <%= f.label :search, "Buscar", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.text_field :search,
              value: params[:search],
              placeholder: "Nombre o DNI",
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Position Type -->
        <div>
          <%= f.label :position_type, "Cargo", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :position_type,
              options_for_select([
                ["Todos", ""],
                ["Presidente", "PRESIDENTE DE LA REPÚBLICA"],
                ["Primer Vicepresidente", "PRIMER VICEPRESIDENTE DE LA REPÚBLICA"],
                ["Segundo Vicepresidente", "SEGUNDO VICEPRESIDENTE DE LA REPÚBLICA"],
                ["Diputado", "DIPUTADO"],
                ["Senador", "SENADOR"]
              ], params[:position_type]),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Political Organization -->
        <div>
          <%= f.label :political_organization_id, "Organización", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :political_organization_id,
              options_for_select([["Todas", ""]] + PoliticalOrganization.order(:name).pluck(:name, :id), params[:political_organization_id]),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Electoral District -->
        <div>
          <%= f.label :electoral_district_id, "Distrito Electoral", class: "block text-sm font-medium text-gray-700 mb-2" %>
          <%= f.select :electoral_district_id,
              options_for_select([["Todos", ""]] + ElectoralDistrict.order(:name).pluck(:name, :id), params[:electoral_district_id]),
              {},
              class: "w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>

        <!-- Submit Button -->
        <div class="flex items-end">
          <%= f.submit "Buscar", class: "w-full px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 cursor-pointer" %>
        </div>
      </div>

      <% if params[:search].present? || params[:position_type].present? || params[:political_organization_id].present? || params[:electoral_district_id].present? %>
        <div class="mt-4">
          <%= link_to "Limpiar filtros", candidates_path, class: "text-sm text-blue-600 hover:text-blue-800" %>
        </div>
      <% end %>
    <% end %>
  </div>

  <!-- Candidates Grid -->
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pb-12">
    <% if @candidates.any? %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% @candidates.each do |candidate| %>
          <%= link_to candidate_path(candidate), class: "block group" do %>
            <div class="bg-white rounded-lg shadow-sm border border-gray-200 overflow-hidden hover:shadow-md transition-shadow duration-200">
              <!-- Photo Section -->
              <div class="bg-gray-100 h-48 flex items-center justify-center">
                <% if candidate.photo_guid.present? %>
                  <%= image_tag candidate.photo_url,
                      alt: candidate.full_name,
                      class: "h-full w-full object-cover",
                      onerror: "this.onerror=null; this.src='data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 24 24%22 fill=%22%23d1d5db%22%3E%3Cpath d=%22M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z%22/%3E%3C/svg%3E';" %>
                <% else %>
                  <svg class="h-24 w-24 text-gray-300" fill="currentColor" viewBox="0 0 24 24">
                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                  </svg>
                <% end %>
              </div>

              <!-- Info Section -->
              <div class="p-4">
                <h3 class="text-lg font-semibold text-gray-900 group-hover:text-blue-600 transition-colors">
                  <%= candidate.full_name %>
                </h3>

                <div class="mt-2 space-y-1">
                  <p class="text-sm text-gray-600">
                    <span class="font-medium">Cargo:</span>
                    <%= candidate.position_type %>
                  </p>

                  <p class="text-sm text-gray-600">
                    <span class="font-medium">Partido:</span>
                    <%= candidate.political_organization.acronym.presence || candidate.political_organization.name %>
                  </p>

                  <% if candidate.electoral_district.present? %>
                    <p class="text-sm text-gray-600">
                      <span class="font-medium">Distrito:</span>
                      <%= candidate.electoral_district.name %>
                    </p>
                  <% end %>

                  <% if candidate.position_number.present? %>
                    <p class="text-sm text-gray-600">
                      <span class="font-medium">Posición:</span>
                      #<%= candidate.position_number %>
                    </p>
                  <% end %>
                </div>

                <!-- Status Badge -->
                <div class="mt-3">
                  <% if candidate.status == "INSCRITO" || candidate.status == "ADMITIDO" %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                      <%= candidate.status %>
                    </span>
                  <% else %>
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                      <%= candidate.status %>
                    </span>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>

      <!-- Pagination -->
      <div class="mt-8 flex justify-center">
        <%= paginate @candidates %>
      </div>
    <% else %>
      <div class="bg-white rounded-lg shadow-sm border border-gray-200 p-12 text-center">
        <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 006.586 13H4"/>
        </svg>
        <h3 class="mt-2 text-sm font-medium text-gray-900">No se encontraron candidatos</h3>
        <p class="mt-1 text-sm text-gray-500">Intenta ajustar tus filtros de búsqueda.</p>
        <div class="mt-6">
          <%= link_to "Ver todos los candidatos", candidates_path, class: "inline-flex items-center px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
